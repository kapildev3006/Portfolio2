
{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents a user in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "portfolio": {
      "title": "Portfolio",
      "description": "The main portfolio data.",
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "subtitle": {
              "type": "string"
            },
            "imageUrl": {
              "type": "string",
              "format": "uri"
            },
            "resumeUrl": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "about": {
          "type": "object",
          "properties": {
            "subtitle": {
              "type": "string"
            },
            "skills": {
              "type": "array",
              "items": {
                "$ref": "#/entities/skill"
              }
            },
            "experience": {
              "type": "array",
              "items": {
                "$ref": "#/entities/experience"
              }
            }
          }
        },
        "achievements": {
          "type": "array",
          "items": {
            "$ref": "#/entities/achievement"
          }
        },
        "contact": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string"
            },
            "location": {
              "type": "string"
            }
          }
        },
        "socials": {
          "type": "object",
          "properties": {
            "linkedin": {
              "type": "string",
              "format": "uri"
            },
            "github": {
              "type": "string",
              "format": "uri"
            },
            "twitter": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "settings": {
            "type": "object",
            "properties": {
                "siteTitle": { "type": "string" },
                "tagline": { "type": "string" },
                "maintenanceMode": { "type": "boolean" },
                "theme": { "type": "string", "enum": ["light", "dark"] },
                "primaryColor": { "type": "string" },
                "fontFamily": { "type": "string" },
                "adminEmail": { "type": "string", "format": "email" },
                "twoFactorAuth": { "type": "boolean" }
            }
        }
      }
    },
    "project": {
      "title": "Project",
      "description": "Represents a portfolio project.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "liveUrl": {
          "type": "string",
          "format": "uri"
        },
        "sourceUrl": {
          "type": "string",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
            "type": "string",
            "description": "The current status of the project.",
            "enum": ["planning", "in-progress", "completed", "review"]
        }
      },
      "required": ["title", "description", "imageUrl", "tags", "createdAt", "status"]
    },
    "skill": {
      "title": "Skill",
      "description": "A category of skills.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "skills": { "type": "string" }
      },
      "required": ["id", "title", "skills"]
    },
    "experience": {
      "title": "Experience",
      "description": "A professional experience or journey item.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "role": { "type": "string" },
        "company": { "type": "string" },
        "period": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["id", "role", "company", "period", "description"]
    },
    "achievement": {
      "title": "Achievement",
      "description": "A notable achievement or award.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "date": { "type": "string" }
      },
      "required": ["id", "title", "description", "date"]
    },
    "contactSubmission": {
      "title": "Contact Form Submission",
      "description": "Represents a message submitted through the contact form.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "subject": { "type": "string" },
        "message": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "isRead": { "type": "boolean" }
      },
      "required": ["name", "email", "subject", "message", "createdAt", "isRead"]
    }
  },
  "auth": {
    "providers": [
      "email-password"
    ]
  },
  "firestore": {
    "/portfolio/{portfolioId}": {
      "schema": {
        "$ref": "#/entities/portfolio"
      },
      "description": "Stores the main portfolio data document."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/projects/{projectId}": {
      "schema": {
        "$ref": "#/entities/project"
      },
      "description": "Stores individual portfolio projects."
    },
    "/contactSubmissions/{submissionId}": {
        "schema": {
            "$ref": "#/entities/contactSubmission"
        },
        "description": "Stores contact form submissions from visitors."
    }
  }
}
