rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'portfolio' collection
    match /portfolio/{docId} {
      // Anyone can read the main portfolio document
      allow read: if true;
      // Only authenticated users can update it
      allow update: if isSignedIn();
    }

    // Rules for the 'projects' collection
    match /projects/{projectId} {
      // Anyone can read individual projects
      allow get: if true;
      // Authenticated users can list, create, update, and delete projects
      allow list, create, update, delete: if isSignedIn();
    }
    
    // Rules for the 'contactSubmissions' collection
    match /contactSubmissions/{submissionId} {
      // Anyone can create a contact submission (for the public contact form)
      allow create: if true;
      // Authenticated users can read, update, delete, and list submissions
      allow read, update, delete, list: if isSignedIn();
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Users can only read their own profile information
      allow read: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
